@model StockService.TransactionHistoryResponse
@{
    ViewData["Title"] = "İşlem Geçmişi";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6 text-primary">
                <i class="fas fa-history me-2"></i>İşlem Geçmişi
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-table me-2"></i>Tüm İşlemler
                    </h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Tarih</th>
                                    <th>Sembol</th>
                                    <th>İşlem</th>
                                    <th>Miktar</th>
                                    <th>Fiyat</th>
                                    <th>Toplam</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Transactions != null && Model.Transactions.Any())
                                {
                                    foreach (var transaction in Model.Transactions)
                                    {
                                        <tr>
                                            <td>@transaction.TransactionDate.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <span class="badge bg-primary bg-opacity-10 text-primary">
                                                    @transaction.Symbol
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @(transaction.Type == "BUY" ? "bg-success" : "bg-warning")">
                                                    @(transaction.Type == "BUY" ? "ALIŞ" : "SATIŞ")
                                                </span>
                                            </td>
                                            <td>@transaction.Quantity.ToString("N0") lot</td>
                                            <td>@transaction.Price.ToString("N2") TL</td>
                                            <td>
                                                <span class="fw-bold">@transaction.TotalAmount.ToString("N2") TL</span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <i class="fas fa-history fa-2x text-muted mb-3"></i>
                                            <h5 class="text-muted">Henüz işlem geçmişiniz yok</h5>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>