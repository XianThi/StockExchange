@model StockService.CreateUserRequest

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-user-plus me-2"></i>Kayıt Ol
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-user"></i>
                            </span>
                            <input asp-for="Username" class="form-control" placeholder="Kullanıcı adı seçin" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                        <small class="form-text text-muted">3-20 karakter arasında olmalıdır.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Şifre oluşturun" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <small class="form-text text-muted">En az 6 karakter uzunluğunda olmalıdır.</small>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="terms" required>
                        <label class="form-check-label" for="terms">
                            <a href="#" class="text-decoration-none">Kullanım koşullarını</a> kabul ediyorum
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Kayıt Ol
                        </button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <p class="mb-0">
                        Zaten hesabınız var mı?
                        <a asp-action="Login" class="text-decoration-none">Giriş Yapın</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}